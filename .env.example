# TelePeças API
# Base URL oficial (ajusta se o teu contrato usar outro domínio)
TELEPECAS_BASE_URL=https://api.telepecas.com

# Driver: oauth2 | basic_token_body
TELEPECAS_AUTH_DRIVER=basic_token_body

# OAuth2 (docs oficiais)
TELEPECAS_CLIENT_ID=
TELEPECAS_CLIENT_SECRET=
# (Opcional) token público do vendedor quando aplicável ao teu modo de integração
TELEPECAS_SELLER_TOKEN=
TELEPECAS_SELLER_TOKEN_PARAM=token

# Manual do módulo (Basic fixo + token no body)
TELEPECAS_BASIC_AUTH_TOKEN=
TELEPECAS_PUBLIC_KEY=

# Opcional: cache temporária
TELEPECAS_CACHE_STORE=file
TELEPECAS_CACHE_ENABLED=true
TELEPECAS_CACHE_TTL_SECONDS=600
TELEPECAS_TIMEOUT_SECONDS=15
TELEPECAS_RETRIES=1
TELEPECAS_RETRY_SLEEP_MS=250

# Proxy interno (lista de paths permitidos, separado por vírgulas)
TELEPECAS_ALLOWED_ENDPOINTS=

# Catálogo (vitrine) sem BD
TELEPECAS_CATALOG_PAGE_SIZE=100
TELEPECAS_CATALOG_MAX_ITEMS=2000
TELEPECAS_CATALOG_CACHE_STORE=file
TELEPECAS_CATALOG_INDEX_TTL_SECONDS=600
# Onde encontrar "categoria" no payload do stock (paths por ordem de preferência)
TELEPECAS_CATEGORY_PATHS=partInfo.partGroup,partInfo.group,category,partInfo.partLocal
TELEPECAS_CATEGORIES_SOURCE=stock
TELEPECAS_MAKE_ID_PATHS=vehicleInfo.externalMakeId,vehicleInfo.makeId,makeId,externalMakeId
TELEPECAS_MAKE_NAME_PATHS=vehicleInfo.makeDescription,vehicleInfo.makeName,makeDescription,makeName,make
TELEPECAS_MODEL_ID_PATHS=vehicleInfo.externalModelId,vehicleInfo.modelId,modelId,externalModelId
TELEPECAS_MODEL_NAME_PATHS=vehicleInfo.description,vehicleInfo.modelName,description,modelName,model
TELEPECAS_MODELS_MAKE_FILTER_PARAM=externalMakeId

# Storefront provider: telepecas | tpsoftware
STOREFRONT_CATALOG_PROVIDER=telepecas
STOREFRONT_CONSULT_EMAIL=marketing@autorcpecas.pt
STOREFRONT_CMS_CONTACT_EMAIL=marketing@autorcpecas.pt

# TP Software (api.tp.software)
TPSOFTWARE_BASE_URL=https://api.tp.software/api/v1
TPSOFTWARE_TOKEN=
TPSOFTWARE_TOKEN_PARAM=tokens
TPSOFTWARE_USE_AUTH_HEADER=false
TPSOFTWARE_CACHE_STORE=file
TPSOFTWARE_CACHE_TTL_SECONDS=600
TPSOFTWARE_TIMEOUT_SECONDS=15
TPSOFTWARE_RETRIES=1
TPSOFTWARE_RETRY_SLEEP_MS=250

TPSOFTWARE_LANGUAGE=pt
TPSOFTWARE_ORDER_FIELD=created_at
TPSOFTWARE_ORDER_TYPE=asc
TPSOFTWARE_CATEGORY_FIELD=vehicle_make_name
TPSOFTWARE_MODEL_FIELD=vehicle_model_name
TPSOFTWARE_CATEGORY_SCAN_LIMIT=200
TPSOFTWARE_CATEGORY_SCAN_MAX_PAGES=50
TPSOFTWARE_CATEGORY_SCAN_MAX_SECONDS=20

TPSOFTWARE_INDEX_ENABLED=true
TPSOFTWARE_INDEX_PAGE_SIZE=200
TPSOFTWARE_INDEX_TTL_SECONDS=1800
TPSOFTWARE_PRICE_FALLBACK_ENABLED=true
TPSOFTWARE_PRICE_FALLBACK_MAX_LOOKUPS=12

